<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <display-name>Pahana Edu Billing System</display-name>

    <!-- ===== Billing servlets ===== -->
    <servlet>
        <servlet-name>BillingServlet</servlet-name>
        <servlet-class>controller.BillingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillingServlet</servlet-name>
        <url-pattern>/billing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchItemServlet</servlet-name>
        <servlet-class>controller.SearchItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchItemServlet</servlet-name>
        <url-pattern>/billing/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrintBillServlet</servlet-name>
        <servlet-class>controller.PrintBillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintBillServlet</servlet-name>
        <url-pattern>/billing/print</url-pattern>
    </servlet-mapping>

    <!-- ===== Auth ===== -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- ===== Customers ===== -->
    <servlet>
        <servlet-name>AddCustomerServlet</servlet-name>
        <servlet-class>controller.AddCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCustomerServlet</servlet-name>
        <url-pattern>/add-customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <servlet-class>controller.DeleteCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <url-pattern>/deleteCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCustomerServlet</servlet-name>
        <servlet-class>controller.UpdateCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCustomerServlet</servlet-name>
        <url-pattern>/updateCustomer</url-pattern>
    </servlet-mapping>

    <!-- ===== Items ===== -->
    <servlet>
        <servlet-name>AddItemServlet</servlet-name>
        <servlet-class>controller.AddItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddItemServlet</servlet-name>
        <!-- support both styles -->
        <url-pattern>/add-item</url-pattern>
        <url-pattern>/addItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateItemServlet</servlet-name>
        <servlet-class>controller.UpdateItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateItemServlet</servlet-name>
        <url-pattern>/update-item</url-pattern>
        <url-pattern>/updateItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteItemServlet</servlet-name>
        <servlet-class>controller.DeleteItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteItemServlet</servlet-name>
        <url-pattern>/delete-item</url-pattern>
        <url-pattern>/deleteItem</url-pattern>
    </servlet-mapping>

    <!-- Default page -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
